{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "setup:dev": "npx prisma migrate dev --name init && nest start --watch",
    "restart:dev": "npx prisma migrate deploy && nest start --watch",
    "deploy": "npx prisma migrate deploy && nest start",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test:all": "jest --coverage",
    "test:watch": "jest --watchAll",
    "test:backend": "jest --selectProjects backend --coverage",
    "test:frontend": "jest --selectProjects frontend --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "jest": {
    "testFailureExitCode": 0,
    "coverageDirectory": "../coverage",
    "projects": [
      {
        "displayName": "backend",
        "moduleFileExtensions": [
          "js",
          "json",
          "ts"
        ],
        "rootDir": "src",
        "testEnvironment": "node",
        "testRegex": ".spec.ts$",
        "transform": {
          "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
          "**/*.(t|j)s"
        ]
      },
      {
        "displayName": "frontend",
        "testEnvironment": "jsdom",
        "rootDir": "../frontend/src",
        "collectCoverageFrom": [
          "**/*.(t|j)sx"
        ]
      }
    ],
    "reporters": [
      "default",
      [
        "../node_modules/jest-html-reporter",
        {
          "pageTitle": "Test Report",
          "outputPath": "../coverage/test_output.html"
        }
      ]
    ]
  }
}
